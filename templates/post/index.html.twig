{% extends 'base.html.twig' %}

{% block title %}Hello PostController!
{% endblock %}

{% block body %}
	<h1>Liste des posts</h1>
	{% for post in posts %}
		<div class="border border-danger my-2 flex">
			<h3>{{ post.content }}</h3>
			<p>
				<small>
					créeée le
					{{ post.createdAt | date('d/m/Y à H:i:s') }}
				</small>
			</p>
			<a class="btn btn-secondary rounded" href={{ path('app_post_details',{'id':post.id} ) }}>Details</a>
		</div>
	{% endfor %}
{% endblock %}
